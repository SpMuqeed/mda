<odoo>
    <data>
        <template id="homepage_template" name="Homepage">
            <t t-call="website.layout">
                <t t-jquery="head" t-operation="append">
                    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
                          rel="stylesheet"/>
                    <link rel="stylesheet"
                          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
                </t>
                <xpath expr="//html" position="attributes">
                    <style>
                        .navbar-nav .nav-link:hover {
                        color: #034673 !important;
                        }

                        /* Ensure full RTL layout for Arabic */
                        .o_rtl {
                        direction: rtl !important;
                        text-align: right;
                        }
                        .o_rtl .o_main_navbar,
                        .o_rtl .o_control_panel,
                        .o_rtl .o_form_view,
                        .o_rtl .o_list_view {
                        text-align: right;
                        }
                        /* Ensure left-to-right layout for non-Arabic languages */
                        .o_ltr {
                        direction: ltr !important;
                        text-align: left;
                        }/

                        body {
                        font-family: Arial, sans-serif;
                        margin: 0;
                        padding: 0;
                        background-color:#e6e6e6 !important;
                        }

                        .about-title {
                        font-size: 1.8rem;
                        font-weight: bold;
                        color: #333;
                        }
                        .about-title {
                        color: #034673; /* Blue color for emphasis */
                        font-weight:400;
                        }
                        .about-title .highlight {
                        font-weight:700;

                        }
                        .about-text {
                        font-size: 1rem;
                        color: #555;
                        line-height: 1.6;
                        margin-bottom: 1rem;
                        }
                        .read-more {
                        display: inline-block;
                        font-size: 1rem;
                        font-weight: bold;
                        color: #034673;
                        text-decoration: none;
                        border-bottom: 2px solid #0056b3;
                        transition: color 0.3s, border-color 0.3s;
                        }
                        .services-section {
                        background-color:white;
                        color: #ffffff; /* White text */
                        }
                        .service-card {

                        background-color: #034673;
                        padding: 20px;
                        border: 2px solid #004080;
                        margin: 10px 0;
                        height:320px;
                        transition: transform 0.3s ease-in-out;
                        transform-origin: top;
                        }
                        .service-card:hover {
                        transform: scaleY(1.15);

                        }
                        .text-center {
                        text-align: start !important;
                        }

                        .row {
                        --gutter-x: 0px;

                        }
                        .service-icon {

                        font-size: 3rem;
                        color: #ffffff;
                        margin-bottom: 15px;
                        }
                        .service-title {
                        font-size: 1.2rem;
                        font-weight: bold;
                        margin-bottom: 10px;
                        }
                        .service-description {
                        font-size: 0.9rem;
                        line-height: 1.6;
                        }
                        .service-card i {
                        display: inline-block;
                        margin-bottom: 10px;
                        }
                        .stats-section {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        gap: 40px; /* Space between cards */
                        padding: 50px 20px;
                        background-color:rgb(245, 245, 245) !important;
                        }
                        .stat-card {
                        text-align: center;
                        width:250px;
                        padding-top:20px;
                        padding-bottom:20px;
                        }
                        .stat-card:hover {
                        background-color:#034673;
                        color:white;
                        }
                        .stat-card:hover .icon {
                        color:white;
                        }
                        .stat-card .icon {
                        font-size: 50px; /* Large icon size */
                        color: #034673; /* Primary color for icons */
                        margin-bottom: 15px;
                        }
                        .stat-number {
                        color:#babac2;
                        font-size: 36px;
                        font-weight: bold;
                        }
                        .stat-label {
                        color:#babac2;
                        font-size: 18px;
                        text-transform: lowercase;
                        letter-spacing: 1px;
                        font-weight: bold;
                        }

                        .carousel-image {
                        height: 400px;
                        object-fit: cover;
                        }

                        /* Adjust height for tablets */
                        @media (max-width: 768px) {
                        .carousel-image {
                        height: 300px;
                        }
                        }
                        /* Adjust height for mobile phones */
                        @media (max-width: 576px) {
                        .carousel-image {
                        height: 200px;
                        }
                        }
                        /* Center indicators and controls for smaller screens */
                        @media (max-width: 768px) {
                        .carousel-indicators button {
                        width: 12px;
                        height: 12px;
                        }
                        }
                        .stats-section {
                        display: flex;
                        flex-wrap: wrap;
                        gap: 0;
                        justify-content: center;
                        padding: 2rem;
                        background-color: #f9f9f9;
                        }

                        .stat-card {
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        text-align: center;
                        padding: 1.5rem;
                        width: calc(25% - 1rem); /* Four cards in a row on large screens */
                        min-width: 150px;
                        max-width: 250px;
                        }


                        /* Responsive adjustments */
                        @media (max-width: 768px) {
                        .stat-card {
                        width: calc(50% - 1rem); /* Two cards per row on tablets */
                        }
                        }

                        @media (max-width: 576px) {
                        .stats-section {
                        flex-direction: column;
                        }
                        .stat-card {
                        width: 100%; /* Full width for each card on mobile */
                        max-width: 400px;
                        }
                        }
                        @media screen and (max-width: 768px) {
                        .about-title {
                        font-size: 1.5rem;

                        }

                        .about-text {
                        font-size: 0.9rem;

                        }

                        .service-card {
                        height: auto;
                        padding: 15px;

                        }

                        .service-icon {
                        font-size: 2.5rem;
                        }

                        .service-title {
                        font-size: 1rem;
                        }

                        .service-description {
                        font-size: 0.85rem;
                        }

                        .row {
                        display: flex;
                        flex-direction: column;

                        }
                        .about-mda-section{
                        margin:0px !important;
                        }
                        .services-section{
                        margin:0px !important;
                        }
                        }

                        @media screen and (max-width: 480px) {
                        .about-title {
                        font-size: 1.3rem;
                        }

                        .about-text {
                        font-size: 0.85rem;
                        }

                        .service-card {
                        width: 90%;
                        margin: 10px auto;
                        padding: 10px;
                        }

                        .service-icon {
                        font-size: 2rem;
                        }

                        .service-title {
                        font-size: 0.9rem;
                        }

                        .service-description {
                        font-size: 0.8rem;
                        }
                        }
                        .services-section{
                        margin:50px;
                        }
                        .carousel-indicators button {
                        width: 12px !important; /* Adjust size */
                        height: 12px !important; /* Adjust size */
                        background:linear-gradient(to top, #d9d9d9, #bababa, #8f8f8f) !important; /* Default color */
                        border-radius: 50%; /* Makes it circular */
                        border: 3px solid #e6e6e6 !important; /* White border for contrast */
                        margin: 5px;

                        transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
                        }

                        .carousel-indicators .active {
                        background-color:#666666 !important; /* Highlighted color */
                        transform: scale(1.15); /* Enlarge active dot */
                        }
                        .carousel-caption {
                        display: flex !important;
                        flex-direction: row !important;
                        justify-content: start !important; /* Center vertically */
                        align-items: flex-start !important; /* Align text to start */
                        text-align: start !important;
                        position: absolute;
                        inset: 0; /* Full coverage */
                        padding: 10%; /* Adds space inside instead of margin */
                        opacity: 0 !important;
                        visibility: hidden !important;
                        transition: opacity 1s ease-in-out 1s, visibility 0s linear 1s !important;
                        }

                        /* Show caption only on active slide */
                        .carousel-item.active .carousel-caption {
                        opacity: 1 !important;
                        visibility: visible !important;
                        }
                        /* üñ•Ô∏è Large screens (Desktops) */
                        @media (min-width: 1200px) {
                        .about_image{
                        width:500px;}
                        .carousel-caption h1 {
                        font-size: 3rem; /* Large Heading */
                        }
                        .carousel-caption h5 {
                        font-size: 1.2rem;
                        }
                        }
                        @media (max-width: 992px) {
                        .about_image{
                        width:500px;}
                        .carousel-caption h1 {
                        font-size: 2.5rem; /* Medium Heading */
                        }
                        .carousel-caption h5 {
                        font-size: 1.2rem;
                        }
                        }
                        /* üì± Mobile Devices */
                        @media (max-width: 768px) {
                        .about_image{
                        display:none !important;}
                        .carousel-caption h1 {
                        font-size: 2rem; /* Smaller Heading */
                        }
                        .carousel-caption h5 {
                        font-size: 1.0rem;
                        }
                        }
                        @media (max-width: 576px) {
                        .about_image{
                        display:none !important;}

                        .carousel-caption h1 {
                        font-size: 1.5rem; /* Compact Heading */
                        }
                        .carousel-caption h5 {
                        font-size: 0.9rem; /* Smaller text */
                        }
                        }


                    </style>
                    <attribute name="dir">
                        <t t-if="request.env.user.lang and request.env.user.lang.startswith('ar')">rtl</t>
                    </attribute>
                    <attribute name="class">
                        <t t-if="request.env.user.lang and request.env.user.lang.startswith('ar')">o_rtl</t>
                    </attribute>

                </xpath>


                <div class="">
                    <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
                        <!-- Indicators -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="0" class="active"
                                    aria-current="true" aria-label="Slide 1"/>
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="1"
