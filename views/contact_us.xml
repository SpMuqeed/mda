<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="contact_us_template" name="Contact Us">
        <t t-call="website.layout">
            <xpath expr="//html" position="attributes">
                <style>

                    .navbar-nav .nav-link:hover {
                    color: #034673 !important;
                    }
                    /* Ensure full RTL layout for Arabic */
                    .o_rtl {
                    direction: rtl !important;
                    text-align: right;
                    }
                    .o_rtl .o_main_navbar,
                    .o_rtl .o_control_panel,
                    .o_rtl .o_form_view,
                    .o_rtl .o_list_view {
                    text-align: right;
                    }

                    /* Ensure left-to-right layout for non-Arabic languages */
                    .o_ltr {
                    direction: ltr !important;
                    text-align: left;
                    }

                    /* Container styling */
                    .form-container {
                    width: 40%;
                    margin: 0 auto;
                    padding: 20px;
                    background-color: #fff;
                    border-radius: 10px;
                    font-family: Arial, sans-serif;
                    }

                    .form-container h2 {
                    text-align: center;
                    margin-bottom: 20px;
                    font-size: 24px;
                    color: #333;
                    }

                    /* Form group styling */
                    .form-group {
                    margin-bottom: 20px;
                    }

                    .form-group label {
                    display: block;
                    font-size: 14px;
                    font-weight: bold;
                    color: #666;
                    margin-bottom: 5px;
                    }

                    .form-control,
                    .form-control-file,
                    .form-control select {
                    width: 100%;
                    padding: 10px;
                    font-size: 14px;
                    color: #333;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    outline: none;
                    box-shadow: inset 0px 1px 2px rgba(0, 0, 0, 0.1);
                    transition: border-color 0.3s;
                    }

                    .form-control:focus,
                    .form-control-file:focus,
                    .form-control select:focus {
                    border-color: black;
                    box-shadow: 0px 0px 0px rgba(0, 123, 255, 0.5);
                    }

                    /* Description textarea */
                    textarea.form-control {
                    resize: none;
                    }

                    /* Button styling */
                    .btn-primary {
                    width: 100%;
                    padding: 12px;
                    font-size: 16px;
                    font-weight: bold;
                    color: #fff;
                    background-color: #004080;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                    transition: background-color 0.3s;
                    }

                    .btn-primary:hover {
                    background-color: #003366;
                    }

                    /* Additional styling for file input */
                    .form-control-file {
                    padding: 5px;
                    font-size: 14px;
                    }

                    /* Adjust spacing between fields */
                    input::placeholder,
                    textarea::placeholder {
                    color: #aaa;
                    }

                    @media (max-width: 768px) {
                    .form-container {
                    width: 90%;
                    }
                    }

                    <!--                    FOOTER RELATED CSS-->


                    .footer {
                    background-image: url("https://www.mda.services/wp-content/uploads/2017/08/hero3.jpg");
                    color: white;
                    padding-top: 40px ;
                    text-align: center;
                    }
                    .footer_desc{
                    margin-right:250px;
                    margin-left:250px;
                    margin-top: 30px;

                    }
                    .footer .cta {
                    margin-top: 60px;
                    margin-bottom: 60px;
                    }

                    .footer .cta h4 {
                    font-size: 24px;
                    margin-bottom: 10px;
                    font-weight:600;
                    letter-spacing:2px;
                    }

                    .footer .cta p {
                    font-size: 16px;
                    margin-bottom: 20px;
                    }

                    .footer .cta button {
                    background-color: #034673;
                    color: white;
                    margin-top:20px;
                    padding: 16px 24px;
                    border: none;
                    font-size: 16px;
                    font-weight:600;
                    cursor: pointer;
                    }

                    .footer .cta button:hover {
                    background-color: white;
                    color:#034673;
                    }


                    .footer .info {
                    display: flex;
                    background-color: #034673;
                    justify-content: space-between;
                    gap: 40px;
                    flex-wrap: wrap;

                    }
                    .info_container{
                    padding-top:100px;
                    padding-bottom:100px;
                    padding-left:150px;
                    padding-right:150px;
                    background-color: #034673;
                    }

                    .footer .info div {
                    max-width: 300px;
                    text-align: left;
                    }

                    .footer .info div h3 {
                    font-size: 18px;
                    margin-bottom: 10px;
                    }

                    .footer .info div p {
                    font-size: 14px;
                    line-height: 1.6;
                    }

                    .footer .icon {
                    font-size: 22px;
                    margin-right: 10px;
                    }
                    .copyright{
                    display:flex;
                    align-items:center;
                    padding-left:200px;
                    height:60px;
                    background-color:#0296c7;
                    color:white;
                    }

                    @media (max-width: 768px) {
                    .footer {
                    background-size: cover;
                    padding-top: 20px;
                    }

                    .footer_desc {
                    margin-left: 20px;
                    margin-right: 20px;
                    }

                    .footer .cta {
                    margin-top: 30px;
                    margin-bottom: 30px;
                    padding: 0 20px;
                    }

                    .footer .cta h4 {
                    font-size: 20px;
                    letter-spacing: 1.5px;
                    }

                    .footer .cta p {
                    font-size: 14px;
                    }

                    .footer .cta button {
                    padding: 12px 20px;
                    font-size: 14px;
                    width: 100%;
                    }

                    .footer .info {
                    flex-direction: column;
                    align-items: start;
                    gap: 20px;
                    text-align: start;
                    padding: 30px 20px;
                    gap:10px;
                    }

                    .info_container {
                    padding: 40px 20px;
                    }

                    .footer .info div {
                    max-width: 100%;
                    text-align: start;
                    gap:5px;
                    }

                    .footer .info div h3 {
                    font-size: 16px;
                    margin-bottom: 10px;
                    }

                    .footer .info div p {
                    font-size: 13px;
                    }

                    .footer .icon {
                    font-size: 20px;
                    margin-right: 0;
                    display: block;
                    margin-bottom: 5px;
                    }

                    .copyright {
                    padding-left: 20px;
                    text-align: center;
                    justify-content: center;
                    height: 50px;

                    }
                    .copyright h6{
                    font-size:12px !important;
                    }
                    .footer .info {
                    flex-direction: column;
                    align-items: center;
                    text-align: center;
                    }
                    }
                    .footer-logo {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    padding: 20px;
                    }

                    .foot-logo {
                    width: 200px; /* Adjust as needed */
                    height: auto;
                    filter: brightness(0) invert(1);
                    }
                    }


                </style>
                <attribute name="dir">
                    <t t-if="request.env.user.lang and request.env.user.lang.startswith('ar')">rtl</t>
                </attribute>
                <attribute name="class">
                    <t t-if="request.env.user.lang and request.env.user.lang.startswith('ar')">o_rtl</t>
                </attribute>
            </xpath>
            <div>
                <h2 style="background-color:#034673;color:white;height:150px;display:flex;align-items:center;padding-left:75px ">
                    Contact Us
                </h2>
            </div>
            <div class="form-container">
                <h2 class="mb-4">Contact Us</h2>
                <form action="/contactus/submit" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="csrf_token" value="your_csrf_token_here"/>
                    <div class="form-group">

                        <input type="text" name="name" id="name" class="form-control" required="true"
                               placeholder="Company Name"/>
                    </div>
                    <div class="form-group">

                        <input type="text" name="contact_name" id="contact_name" class="form-control" required="true"
                               placeholder="Contact Name"/>
                    </div>
                    <div class="form-group">

                        <input type="email" name="email" id="email" class="form-control" required="true"
                               placeholder="Email"/>
                    </div>
                    <div class="form-group">

                        <input type="text" name="phone_number" id="phone_number" class="form-control" required="true"
                               placeholder="Phone Number"/>
                    </div>
                    <div class="form-group">

                        <select name="Circle" id="Circle" class="form-control" required="true"
                                placeholder="Company Name">
                            <option value="">Select Circle</option>
                            <option value="option-1">Circle 1</option>
                            <option value="option-2">Circle 2</option>
                            <option value="option-3">Circle 3</option>
                        </select>
                    </div>
                    <div class="form-group">

                        <textarea name="description" id="description" class="form-control" rows="4" required="true"
                                  placeholder="Description"/>
                    </div>
                    <div class="form-group">

                        <input type="file" name="file" id="file" class="form-control-file" required="true"
                               placeholder="Upload File"/>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Submit</button>
                </form>
            </div>
            <footer class="footer">
                <div class="cta">
                    <h4>DO YOU LIKE WHAT YOU SEE ?</h4>
                    <p class="footer_desc  d-flex justify-content-center ">It is easy to make promises before a sale
                        but following up and ensuring a great customer experience is what makes some organizations
                        stand out. We are proud to be right up there when it comes to exceptional customer
                        experiences.
                    </p>
                    <button>CONTACT US TODAY</button>
                </div>
                <div class="info_container">
                    <div style=" border-bottom:1px solid white; ">
                        <div class="info d-flex flex-sm-row">
                            <div class="d-flex flex-cols">
                                <div>
                                    <img class="icon"
                                         src="https://www.mda.services/wp-content/uploads/2021/04/icon5.png"
                                         alt="Image"/>
                                </div>
                                <div>
                                    <h3>ADDRESS</h3>
                                    <p>Al Arooba St - Woroond 4128, Riyadh 12252 - 6691, Kingdom of Saudi Arabia</p>
                                </div>

                            </div>
                            <div class="d-flex flex-cols">
                                <div>
                                    <img class="icon"
                                         src="https://www.mda.services/wp-content/uploads/2021/04/icon7.png"
                                         alt="Image"/>
                                </div>
                                <div>
                                    <h3>E-MAIL</h3>
                                    <p>info@mda.services</p>
                                </div>

                            </div>
                            <div class="d-flex flex-cols">
                                <div>
                                    <img class="icon"
                                         src="https://www.mda.services/wp-content/uploads/2021/04/icon8.png"
                                         alt="Image"/>
                                </div>
                                <div>
                                    <h3>Working Hours</h3>
                                    <p>Sun-Thu: 9 AM to 5 PM</p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="footer-logo">
                        <img class="foot-logo"
                             src="http://www.mda.services/wp-content/uploads/2017/08/logo-mda-e1504009879650.png"
                             alt="MDA Services Logo"/>
                    </div>

                </div>

            </footer>
            <div class="copyright">
                <h6>Copyright Â© 2021, Modern Digital Applications (MDA)</h6>
            </div>
        </t>
    </template>

    <template id="contact_us_success" name="Contact Us Success">
        <t t-call="website.layout">
            <div class="container">
                <h1>Thank you!</h1>
                <p>Your details have been successfully submitted.</p>
            </div>
        </t>
    </template>

    <template id="contact_us_failure" name="Contact Us Failure">
        <t t-call="website.layout">
            <div class="container">
                <h1>Oops! Something went wrong.</h1>
                <p>
                    <t t-esc="error"/>
                </p>
            </div>
        </t>
    </template>
</odoo>